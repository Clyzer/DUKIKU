<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_background"
    android:orientation="vertical"
    android:theme="@style/AppTheme.DayNight">

    <TextView
        android:id="@+id/action_seen"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:clickable="true"
        android:drawableStart="@drawable/ic_option_seen"
        android:drawablePadding="32dp"
        android:drawableTint="?colorControlNormal"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        android:gravity="start|center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Marcar como vistos"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/action_unseen"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:drawableStart="@drawable/ic_option_not_seen"
        android:drawablePadding="32dp"
        android:drawableTint="?colorControlNormal"
        android:focusable="true"
        android:gravity="start|center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Marcar como no vistos"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/action_import_all"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:drawableStart="@drawable/ic_import"
        android:drawablePadding="32dp"
        android:drawableTint="?colorControlNormal"
        android:focusable="true"
        android:gravity="start|center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Importar archivos"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/action_download_all"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:drawableStart="@drawable/ic_download_multiple"
        android:drawablePadding="32dp"
        android:drawableTint="?colorControlNormal"
        android:focusable="true"
        android:gravity="start|center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Descargar todos"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/action_queue_all"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:drawableStart="@drawable/ic_add_list"
        android:drawablePadding="32dp"
        android:drawableTint="?colorControlNormal"
        android:focusable="true"
        android:gravity="start|center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="AÃ±adir a cola"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="16sp"/>

</LinearLayout>